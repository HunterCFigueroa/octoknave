<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <div class="header-fields">
            <div class="flexrow">
                <div id="logo-container">
                    <img class="logo-img" src="systems/knave2e/assets/knave-2e-logo.png" title="Knave2eLogo" />
                </div>
                <div class="flexcol">
                    <div class="flexrow flex-group-left" id="dotted">
                        <div class="resource-label flex1">Name</div>
                        <input class="transparent flex3" name="actor.name" type="text" value="{{actor.name}}"
                            placeholder="{{actor.name}}" />

                    </div>
                    <div class="flexrow flex-group-left" id="dotted">
                        <div class="resource-label flex1">Careers</div>
                        <input class="transparent flex3" name="actor.careers" type="text" value="{{actor.careers}}"
                            placeholder="Alchemist, Cook, Sailor, etc." />
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section class="sheet-body">
        <section class="character-abilities">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
                <div id="ability-values">
                    <input class="ability-circle" type="text" name="system.abilities.{{key}}.value"
                        value="{{ability.value}}" data-dtype="Number" />
                </div>
                <div id="ability-text">
                    <div class="ability flexcol flex-group-left items-start">
                        <div class="resource-label rollable" data-roll="d20+@system.abilities.{{key}}.value"
                            data-label="{{ability.label}}">{{localize ability.label}}</div>
                        <div class="resource-detail">{{localize ability.detail}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
        </section>
    </section>
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <footer>
        <div class="flexrow flex-group-center">
            <p style="font-size:smaller">Copyright &#169; 2023 <a href="https://www.patreon.com/questingbeast/posts">Ben
                    Milton and Questing Beast LLC.</a> Logo Design by <a
                    href="https://www.behance.net/MindkillerINK?locale=en_US">Tim Hastings</a>.</p>
        </div>
    </footer>
</form>
