<section>
    <div class="flexrow no-wrap" style="margin-bottom: 10px; gap: 12px;">
        <div class="flexcol"  style="flex: 0;">
            <div  class="flexcol"  style="align-items: center;">
                <div class="resource-label">{{localize "KNAVE2E.Stamina"}}</div>
                <div class="resource-label content">{{system.stamina.value}} / {{system.stamina.max}}</div>
            </div>
            <div  class="flexcol"  style="align-items: center;">
                <div class="progress-container grid-span-1 vertical">
                    <div class="progress-bar">
                        <div class="progress-fill stamina" style="height:{{system.stamina.progress}}%">
                        </div>
                        <input class="progress-input resource-label content" name="system.stamina.value"
                            value="{{system.stamina.value}}" />
                    </div>
                </div>
            </div>
        </div>
        <div class="flexcol" style="gap: 12px;">
            <ol class="items-list" style="margin-bottom: 0px;">
                <li class="knave-item grid grid-12col items-header">
                <div class="resource-label item-name-header grid-span-5">{{localize "KNAVE2E.Spell"}}</div>
                <div class="resource-label item-name-header grid-span-2">{{localize "KNAVE2E.Essence"}}</div>
                <div class="resource-label item-name-header grid-span-2">{{localize "KNAVE2E.StaminaCost"}}</div>
                <div class="resource-label item-controls-header grid-span-3">
                    <a class="item-control item-create-spell" title="Create spell" data-type="spell"><i class="fas fa-plus"></i> Add Spell</a>
                </div>
                </li>
                
                {{#each spells as |item id|}}
                <li class="knave-item grid grid-12col" data-item-id="{{item._id}}">
                <div class="item-image"><a class="item-image item-name grid-span-1"><img src="{{item.img}}" title="{{item.name}}"
                        width="36" height="36" /></a></div>
                
                <a class="item-name detail grid-span-4">{{item.name}}</a>
                <div class="item-essence grid-span-2 item-prop">{{item.system.essence}}</div>
                <div class="item-stamina-cost grid-span-2 item-prop">{{item.system.staminaCost}}</div>
                
                <div class="item-buttons grid-span-1 flexrow flex-group-center">
                    <button class="item-button cast-spell" data-action="cast-spell" type="button">{{localize "KNAVE2E.CastAbbr"}}</button>
                </div>
                
                <div class="item-controls grid-span-2">
                    <a class="item-control item-edit" title="Edit Spell"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Spell"><i class="fas fa-trash"></i></a>
                </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>
</section>